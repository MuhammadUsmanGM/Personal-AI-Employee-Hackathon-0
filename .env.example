# Personal AI Employee System - Environment Variables

# Gmail API Configuration
GMAIL_CREDENTIALS_PATH=path/to/gmail_credentials.json
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# WhatsApp Session Path
WHATSAPP_SESSION_PATH=~/.whatsapp_session

# Obsidian Configuration
OBSIDIAN_VAULT_PATH=obsidian_vault

# MCP Server Configuration
EMAIL_MCP_HOST=localhost
EMAIL_MCP_PORT=8080
BROWSER_MCP_HOST=localhost
BROWSER_MCP_PORT=8081

# Security Configuration
APPROVAL_THRESHOLD=100
SECURITY_LOGGING=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30
STRUCTURED_LOGGING=true

# Watcher Intervals (in seconds)
GMAIL_CHECK_INTERVAL=120
WHATSAPP_CHECK_INTERVAL=30
FILESYSTEM_CHECK_INTERVAL=10
CALENDAR_CHECK_INTERVAL=300
ORCHESTRATOR_CHECK_INTERVAL=60

# Claude API Configuration (if needed)
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-sonnet-20240229

# Browser Automation
BROWSER_HEADLESS=true

# Process Management
PM2_ENABLED=false

# Silver Tier Features Configuration
ENABLE_ANALYTICS=true
ENABLE_LEARNING=true
ENABLE_ADVANCED_MONITORING=true
ENABLE_PREDICTIVE_FEATURES=true
ENABLE_CALENDAR_INTEGRATION=false

# Gold Tier Features Configuration
ENABLE_ENTERPRISE_FEATURES=true
ENABLE_STRATEGIC_PLANNING=true
ENABLE_RISK_MANAGEMENT=true
ENABLE_COMPLIANCE_TRACKING=true
ENABLE_BUSINESS_INTELLIGENCE=true
ENABLE_RESOURCE_OPTIMIZATION=true
ENABLE_HUMAN_AI_COLLABORATION=true
ENABLE_ADVANCED_NLP=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_AUTOMATED_DECISION_MAKING=true

# API Configuration
API_HOST=localhost
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=*

# Database Configuration
DATABASE_URL=sqlite:///silver_tier.db
DB_POOL_SIZE=20
DB_POOL_OVERFLOW=10
DB_ECHO=false

# Calendar Integration Configuration
CALENDAR_SYNC_ENABLED=false
CALENDAR_DEFAULT_PROVIDER=google
CALENDAR_SYNC_FREQUENCY=15
CALENDAR_CREATE_TASKS_FOR_EVENTS=true

# Integration Configuration
CALENDAR_INTEGRATION_ENABLED=false
CRM_ENABLED=false
PROJECT_MANAGEMENT_ENABLED=false
ENTERPRISE_SYSTEM_INTEGRATION=false

# ML/AI Model Configuration
ML_MODEL_CACHE_SIZE=2GB
NLP_MODEL_PATH=path/to/nlp/models
PREDICTION_MODEL_PATH=path/to/prediction/models
RECOMMENDATION_MODEL_PATH=path/to/recommendation/models
TRANSFORMERS_CACHE_DIR=path/to/transformers/cache

# Enterprise Configuration
ENTERPRISE_LICENSE_KEY=your-enterprise-license-key
MULTI_TENANCY_ENABLED=false
ENTERPRISE_AUDIT_LOGGING=true
ADVANCED_SECURITY=true
ROLE_BASED_ACCESS_CONTROL=true

# Performance Configuration
MAX_CONCURRENT_AI_OPERATIONS=10
PARALLEL_PROCESSING_THREADS=8
MEMORY_LIMIT_PER_REQUEST=512MB
CACHE_SIZE=1GB

# CORS Configuration
CORS_ORIGINS=*
ALLOWED_ORIGINS=*