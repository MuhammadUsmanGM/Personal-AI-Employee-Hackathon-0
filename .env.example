# Personal AI Employee System - Environment Variables

# Gmail API Configuration
GMAIL_CREDENTIALS_PATH=path/to/gmail_credentials.json
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# WhatsApp Session Path
WHATSAPP_SESSION_PATH=~/.whatsapp_session

# Obsidian Configuration
OBSIDIAN_VAULT_PATH=obsidian_vault

# MCP Server Configuration
EMAIL_MCP_HOST=localhost
EMAIL_MCP_PORT=8080
BROWSER_MCP_HOST=localhost
BROWSER_MCP_PORT=8081

# Security Configuration
APPROVAL_THRESHOLD=100
SECURITY_LOGGING=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30
STRUCTURED_LOGGING=true

# Watcher Intervals (in seconds)
GMAIL_CHECK_INTERVAL=120
WHATSAPP_CHECK_INTERVAL=30
FILESYSTEM_CHECK_INTERVAL=10
CALENDAR_CHECK_INTERVAL=300
ORCHESTRATOR_CHECK_INTERVAL=60

# Claude API Configuration (if needed)
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-sonnet-20240229

# Browser Automation
BROWSER_HEADLESS=true

# Process Management
PM2_ENABLED=false

# Silver Tier Features Configuration
ENABLE_ANALYTICS=true
ENABLE_LEARNING=true
ENABLE_ADVANCED_MONITORING=true
ENABLE_PREDICTIVE_FEATURES=true
ENABLE_CALENDAR_INTEGRATION=false

# API Configuration
API_HOST=localhost
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=*

# Database Configuration
DATABASE_URL=sqlite:///silver_tier.db
DB_POOL_SIZE=20
DB_POOL_OVERFLOW=10
DB_ECHO=false

# Calendar Integration Configuration
CALENDAR_SYNC_ENABLED=false
CALENDAR_DEFAULT_PROVIDER=google
CALENDAR_SYNC_FREQUENCY=15
CALENDAR_CREATE_TASKS_FOR_EVENTS=true

# Integration Configuration
CALENDAR_INTEGRATION_ENABLED=false
CRM_ENABLED=false
PROJECT_MANAGEMENT_ENABLED=false

# CORS Configuration
CORS_ORIGINS=*
ALLOWED_ORIGINS=*